<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    android:elevation="0dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp">

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fon_delegata_tovar"
    android:background="@color/color_my_post">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_ava_tovara"
        android:src="@drawable/icon_dark_edit"
        android:background="@android:color/transparent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/liner_name_delegat">

                        <dmitriy.deomin.how_much.libries.TextView_new
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="Товар:"
                            android:id="@+id/textView2"
                            android:background="@android:color/transparent"
                            android:textSize="10dp"
                            android:gravity="bottom" />

                            <dmitriy.deomin.how_much.libries.TextView_new
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Картофель"
                                android:id="@+id/textView_tovar"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:textStyle="bold"
                                android:textSize="19dp"
                                android:gravity="bottom"
                                android:singleLine="false" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:id="@+id/liner_mani_delegat">

                        <dmitriy.deomin.how_much.libries.TextView_new
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="Цена:"
                            android:id="@+id/textView3"
                            android:background="@android:color/transparent"
                            android:textSize="10dp"
                            android:gravity="bottom" />

                        <dmitriy.deomin.how_much.libries.TextView_new
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="12р"
                            android:id="@+id/textView_cena"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:id="@+id/liner_adres_delegat">

                <dmitriy.deomin.how_much.libries.TextView_new
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Адрес:"
                    android:id="@+id/textView5"
                    android:background="@android:color/transparent"
                    android:textSize="10dp"
                    android:gravity="bottom" />

                <dmitriy.deomin.how_much.libries.TextView_new
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Мичуринск"
                    android:id="@+id/textView_gorod"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="bottom" />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_marginTop="3dp">

                <dmitriy.deomin.how_much.libries.TextView_new
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Дата:"
                    android:id="@+id/textView7"
                    android:background="@android:color/transparent"
                    android:textSize="10dp"
                    android:gravity="bottom" />

                <dmitriy.deomin.how_much.libries.TextView_new
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="23.04.2016"
                    android:id="@+id/textView_data"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:textSize="9sp"
                    android:gravity="bottom" />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:visibility="gone">

                <dmitriy.deomin.how_much.libries.TextView_new
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Добавил:"
                    android:id="@+id/textView9"
                    android:background="@android:color/transparent" />

                <dmitriy.deomin.how_much.libries.TextView_new
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Иван Васильевич"
                    android:id="@+id/textView_user"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@android:color/transparent" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <dmitriy.deomin.how_much.libries.TextView_new
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_koment"
        android:background="@android:color/transparent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        android:layout_gravity="left"
        android:layout_marginRight="5dp"
        android:clickable="true"
        android:maxHeight="100dp"
        android:text="Коментарии" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loaut_button"
        android:weightSum="1"
        android:layout_gravity="right"
        android:background="@android:color/transparent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp">

        <dmitriy.deomin.how_much.libries.Button_new
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/button_add_koment_item"
            android:background="@android:drawable/ic_menu_edit"
            android:textSize="10sp"
            android:layout_gravity="left" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/button_dislake"
            android:background="@drawable/dislaki"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="10sp"
            android:layout_gravity="right"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/button_like"
            android:layout_toStartOf="@+id/button_like"
            android:layout_marginRight="10dp" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/button_like"
            android:background="@drawable/like"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="10sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp" />

        <Button
            android:id="@+id/button_delet_po_dislaykam"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/button_dislake"
            android:background="@android:drawable/ic_delete"
            android:visibility="gone" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/button_root_edit"
            android:background="@android:drawable/ic_menu_more"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</LinearLayout>


</android.support.v7.widget.CardView>

    </LinearLayout>