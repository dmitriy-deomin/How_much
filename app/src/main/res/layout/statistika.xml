<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        android:elevation="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fon_statistika">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <dmitriy.deomin.how_much.libries.TextView_new
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Постов в базе:"
            android:textSize="12dp"
            android:gravity="center|left" />

        <dmitriy.deomin.how_much.libries.TextView_new
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/textView_statistika_count_post"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <dmitriy.deomin.how_much.libries.TextView_new
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Моих постов :"
            android:layout_gravity="center_horizontal"
            android:textSize="12dp"
            android:gravity="center|left" />

        <dmitriy.deomin.how_much.libries.TextView_new
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/textView_statistika_count_my_post"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <dmitriy.deomin.how_much.libries.TextView_new
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Пользователей:"
            android:layout_gravity="center_horizontal"
            android:textSize="12dp"
            android:gravity="center|left" />

        <dmitriy.deomin.how_much.libries.TextView_new
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/textView_statistika_count_user"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp" />
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp">
        <dmitriy.deomin.how_much.libries.TextView_new
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Мой id  и пароль:"
            android:layout_gravity="center_horizontal"
            android:textSize="12dp"
            android:gravity="center|left" />

        <dmitriy.deomin.how_much.libries.TextView_new
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/textView_statistika_id_pasford_user"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:enabled="true"
            android:clickable="true"
            android:singleLine="true" />
    </LinearLayout>





</LinearLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>